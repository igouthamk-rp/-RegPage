@page
@model _RegPage.Pages.AllPages.LoginModel
@{
  
}


<div>
    <br /><br /><br />
    <div class="container p-3 col-4 card">
        <div class="card-body ">
            <h2 class="fw-bold text-center">Sign In</h2>
            <hr />
            <br />
            
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div> 

                <input asp-for="Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span><br />

                <input asp-for="Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span><br />

                <button class="btn btn-success w-80 rounded-pill">Login</button><br /> <br />

                <input type="checkbox" class="form-check-input text-primary" />

                <label class="form-check-label ">&nbsp; Stay signed in</label><br /> <br />

                <a class="btn btn-primary rounded-pill w-100" asp-page="/AllPages/Register">Create an account</a>
            </form>
        </div>
    </div>
</div>

