@page
@model _RegPage.Pages.AllPages.RegisterModel
@{
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Create an Account</h3>
                </div>
                <div class="card-body">
                    <form method="post">


                        <div class="row mb-3">
                            <label asp-for="Credentials.Salutation" class="col-sm-4 col-form-label">Salutation</label>
                            <div class="col-sm-8">
                                <select class="form-select" asp-for="Credentials.Salutation">
                                    <option value="Mr" asp-for="Credentials.Salutation">Mr</option>
                                    <option value="Ms" asp-for="Credentials.Salutation">Ms</option>
                                    <option value="Mrs" asp-for="Credentials.Salutation">Mrs</option>
                                </select>
                                <span asp-validation-for="Credentials.Salutation" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Credentials.FullName" class="col-sm-4 col-form-label">FullName</label>
                            <div class="col-sm-8">
                                <input class="form-control" asp-for="Credentials.FullName" />
                                <span asp-validation-for="Credentials.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Credentials.Email" class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <input class="form-control" asp-for="Credentials.Email" />
                                <span asp-validation-for="Credentials.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Credentials.MobileNumber" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input class="form-control" asp-for="Credentials.MobileNumber" />
                                <span asp-validation-for="Credentials.MobileNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Credentials.DOB" class="col-sm-4 col-form-label">Date of Birth</label>
                            <div class="col-sm-8">
                                <input type="date" class="form-control" asp-for="Credentials.DOB" />
                                <span asp-validation-for="Credentials.DOB" class="text-danger"></span>
                            </div>
                        </div>




                        <div class="row mb-3">
                            <label asp-for="Credentials.Gender" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <label >Male</label>
                                <input type="radio" value="Male" asp-for="Credentials.Gender" style="margin-right: 15px;" />
                                <label>Female</label>
                                <input type="radio" value="Female" asp-for="Credentials.Gender"/>
                            </div>
                            <span asp-validation-for="Credentials.Gender" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Credentials.Password" class="col-sm-4 col-form-label">Password</label>
                            <div class="col-sm-8">
                                <input class="form-control" asp-for="Credentials.Password" />
                                <span asp-validation-for="Credentials.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Credentials.ConfPassword" class="col-sm-4 col-form-label">Confirm Password</label>
                            <div class="col-sm-8">
                                <input class="form-control" asp-for="Credentials.ConfPassword" />
                                <span asp-validation-for="Credentials.ConfPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <br />

                        <div>
                            <input type="checkbox" asp-for="Credentials.IsChecked"> &nbsp;I accept the terms and conditions

                            <span asp-validation-for="Credentials.IsChecked" class="text-danger"></span>
                        </div>

                        <br />
                        <div>
                            <button type="submit" class="btn btn-success rounded-pill"> &nbsp;Register &nbsp;</button>
                        </div>

                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="/AllPages/Login" class="btn btn-primary rounded-pill">Already have an account? Sign In</a>
                </div>
            </div>
        </div>
    </div>
</div>
